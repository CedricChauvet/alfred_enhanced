# ============================================================================
# ALFRED Experiments Environment Variables
# Source this file: source .env
# ============================================================================

# Paths
export ALFRED_ROOT="/media/cedrix/Ubuntu_2To/Alfred/alfred_enhanced"

# Python paths
export PYTHONPATH="$ALFRED_ROOT:$PYTHONPATH"

# Conda environment
export ALFRED_CONDA_ENV="alfred_env"

# GPU
export CUDA_VISIBLE_DEVICES=0

# Logging
export ALFRED_LOG_LEVEL="INFO"

# Verify paths exist
if [ ! -d "$ALFRED_ROOT" ]; then
    echo "⚠️  Warning: ALFRED_ROOT not found at $ALFRED_ROOT"
fi


echo "✓ ALFRED environment loaded"
echo "  ALFRED_ROOT: $ALFRED_ROOT"
echo "  PYTHONPATH: $PYTHONPATH"